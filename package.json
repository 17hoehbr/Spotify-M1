{
  "name": "spotify-m1",
  "version": "1.0.0",
  "main": "index.js",
  "description": "Spotify Native for M1 Macs",
  "author": {
    "name": "17hoehbr",
    "email": "17hoehbr@gmail.com",
    "url": "https://github.com/17hoehbr/spotify-m1"
  },
  "homepage": "https://github.com/17hoehbr/spotify-m1",
  "keywords": [
    "Spotify"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://github.com:17hoehbr/spotify-m1"
  },
  "license": "MIT",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron --disable-gpu .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "4.3.5",
    "electron-window-state": "5.0.3",
    "electron-prompt": "1.6.0",
    "express": "^4.17.1",
    "express-asset-file-cache-middleware": "^1.3.0",
    "v8-compile-cache": "^2.2.0"
  },
  "devDependencies": {
    "electron": "https://github.com/castlabs/electron-releases#v13.0.0-wvvmp-beta.5",
    "electron-builder": "^22.7.0",
    "electron-webpack": "^2.8.2",
    "webpack": "~4.42.1"
  },
  "build": {
    "electronDownload": {
      "mirror": "https://github.com/castlabs/electron-releases/releases/download/v"
    },
    "appId": "spotify-m1",
    "extends": null,
    "mac": {
      "category" : "public.app-category.music",
      "target": [
        "dmg"
      ],
      "icon" : "icon.icns",
      "darkModeSupport" : "true",
      "publish": [
        {
          "provider": "github",
          "owner": "17hoehbr",
          "repo": "spotify-m1"
        }
      ]
    }
  }
}
